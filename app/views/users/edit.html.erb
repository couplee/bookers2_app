<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "nope.jpeg" %>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputName">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputName" %>
  <%= f.submit "変更を保存" %>
<% end %>