<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size: '100x100' %></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <p class="user_edit"><%= link_to ' ', edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></p>
        </div>


        <h2 class="mt-3">New book</h2>
        <%=form_with model:@book, url: books_path, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: 'form-control book_title' %>
          </div>

          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body, class: 'form-control book_body' %>
          </div>

          <div class="form-group">
            <h4><%=f.submit 'Create Book', class: 'btn btn-success' %></h4>
          </div>
        <% end %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpeg", size: '20x20', class: 'attachment user profile_image fallback' %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id), class: 'book_12282' %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>